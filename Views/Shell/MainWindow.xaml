<Window x:Class="Project.DesktopClient.Views.Shell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project.DesktopClient"
        xmlns:converters="clr-namespace:Project.DesktopClient.Converters"
        xmlns:prism="http://prismlibrary.com/"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid>
        <!-- Região raiz da aplicação -->
        <ContentControl prism:RegionManager.RegionName="ShellRegion" />

        <!-- Overlay global-->
        <Border Background="#80000000" Panel.ZIndex="999"
                Visibility="{Binding BusyService.IsBusy,
                    Converter={StaticResource BoolToVisibilityConverter}}"/>
    </Grid>
</Window>
