<UserControl x:Class="Project.DesktopClient.Views.Review.Dialogs.ReviewVisualizeDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project.DesktopClient.Views.Review.Dialogs"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="800">
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="ResizeMode" Value="NoResize"/>
            <Setter Property="SizeToContent" Value="WidthAndHeight"/>
        </Style>
    </prism:Dialog.WindowStyle>

    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Visualizar Review"
               FontSize="30" FontWeight="Bold"
               HorizontalAlignment="Center"/>

        <Grid Grid.Row="1" Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <!-- linha da imagem -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Id usuário -->
            <TextBlock Text="Id do usuário:" Grid.Row="0"
                   FontSize="18" Margin="5"
                   HorizontalAlignment="Right"/>

            <TextBox Text="{Binding UserId}" IsEnabled="False"
                 Grid.Row="0" Grid.Column="1"
                 Width="200" Margin="5"
                 HorizontalAlignment="Left"/>

            <!-- Título -->
            <TextBlock Text="Título:" Grid.Row="1"
                   FontSize="18" Margin="5"
                   HorizontalAlignment="Right"/>

            <TextBox Text="{Binding ReviewTitle}" IsEnabled="False"
                 Grid.Row="1" Grid.Column="1"
                 Width="200" Margin="5"
                 HorizontalAlignment="Left"/>

            <!-- Categoria -->
            <TextBlock Text="Categoria:" Grid.Row="2"
                   FontSize="18" Margin="5"
                   HorizontalAlignment="Right"/>

            <TextBox Text="{Binding Category}" IsEnabled="False"
                 Grid.Row="2" Grid.Column="1"
                 Width="200" Margin="5"
                 HorizontalAlignment="Left"/>

            <!-- Descrição -->
            <TextBlock Text="Descrição:" Grid.Row="3"
                   FontSize="18" Margin="5"
                   HorizontalAlignment="Right"/>

            <TextBox Text="{Binding Description}"  IsEnabled="False"
                 Grid.Row="3" Grid.Column="1"
                 Width="300" Height="200"
                 Margin="5" TextWrapping="Wrap"
                 HorizontalAlignment="Left"/>

            <!-- Imagem -->
            <TextBlock Text="Imagem:" Grid.Row="4"
                   FontSize="18" Margin="5"
                   HorizontalAlignment="Right"/>

            <Image Source="{Binding ImagePreview}"
                Grid.Row="4" Grid.ColumnSpan="2"
                Width="150" Height="150"
                HorizontalAlignment="Center"/>           
        </Grid>

        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">

            <Button Content="Voltar" 
                Width="100" Height="50" Margin="15"               
                Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
